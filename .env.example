# Environment variables for the cryptocurrency dashboard
# Copy this file to .env and adjust values before running the app.

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/crypto_dashboard?schema=public"

# CoinGecko API
# Get your free API key at: https://www.coingecko.com/en/api/pricing
COINGECKO_API_KEY="your-coingecko-api-key-here"

# Cron Job Security (for scheduled data fetching)
# Generate with: openssl rand -base64 32
CRON_SECRET="your-secure-random-string-here"

# Authentication (for future implementation)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="changeme"

# Environment
NODE_ENV="development"
